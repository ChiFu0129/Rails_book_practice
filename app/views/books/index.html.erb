<%= flash[:notice] %>
<h1>Hello Books</h1>

<%= link_to "新增書目", new_book_path%>

<table>
  <tr>
    <td>Name:</td>
    <td>Date:</td>
    <td>Price:</td>
    <td>Page:</td>
    <td>ISBN:</td>
    <td>修改：</td>
    <td>刪除：</td>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= link_to book.name, book_path(book.id) %></td>
    <td><%= book.date %></td>
    <td><%= book.price %></td>
    <td><%= book.page %></td>
    <td><%= book.ISBN %></td>
    <td><%= link_to 'update', edit_book_path(book.id) %></td>
    <td>
      <%= link_to 'delete', book_path(book.id) ,method: 'delete' ,data:
      {confirm: 'Are you sure?'} %>
    </td>
  </tr>
  <% end %>
</table>
